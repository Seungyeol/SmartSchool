<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp" android:layout_height="143dp">

    <ImageView
        android:id="@+id/iv_video_img"
        android:layout_width="340dp" android:layout_height="143dp"
        android:layout_centerInParent="true"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#702d2d2d">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="9"
            android:layout_marginLeft="6dp"
            android:text="123123123"
            android:textColor="#FFFFFFFF"
            android:singleLine="true"
            android:ellipsize="marquee" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1"
            android:layout_marginRight="6dp"
            android:text="00:30"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:singleLine="true"
            android:ellipsize="marquee" />
    </LinearLayout>
</RelativeLayout>