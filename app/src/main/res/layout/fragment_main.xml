<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="4dp"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1.0"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_height"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:padding="@dimen/health_container_item_padding">
            <ImageView
                android:id="@+id/iv_height"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:background="@drawable/main_height"/>
            <TextView
                android:id="@+id/tv_height_title"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/iv_height" android:layout_centerHorizontal="true"
                style="@style/HeathItemTitleTxt"
                android:text="성장발달" />
            <TextView
                android:id="@+id/tv_height"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/tv_height_title" android:layout_centerHorizontal="true"
                style="@style/HeathItemNumberTxt" android:text="0" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_growth"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:padding="@dimen/health_container_item_padding">
            <ImageView
                android:id="@+id/iv_growth"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:background="@drawable/main_growth"/>
            <TextView
                android:id="@+id/tv_growth_title"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/iv_growth" android:layout_centerHorizontal="true"
                style="@style/HeathItemTitleTxt"
                android:text="종합건강점수"/>
            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/tv_growth_title" android:layout_centerHorizontal="true"
                style="@style/HeathItemNumberTxt"
                android:id="@+id/tv_growth_grade" android:text="0"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_dining"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:padding="@dimen/health_container_item_padding">
            <ImageView
                android:id="@+id/iv_dining"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:background="@drawable/main_dining"/>
            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/iv_dining" android:layout_centerHorizontal="true"
                style="@style/HeathItemTitleTxt"
                android:text="식단/영양"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_pt"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:padding="@dimen/health_container_item_padding">
            <ImageView
                android:id="@+id/iv_pt"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:background="@drawable/main_pt"/>
            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/iv_pt" android:layout_centerHorizontal="true"
                style="@style/HeathItemTitleTxt"
                android:text="개인별맞춤운동"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1.0"
        android:layout_marginTop="@dimen/health_container_top_margin"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_weight"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:padding="@dimen/health_container_item_padding">
            <ImageView
                android:id="@+id/iv_weight"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:background="@drawable/main_pt"/>
            <TextView
                android:id="@+id/tv_weight_title"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/iv_weight" android:layout_centerHorizontal="true"
                style="@style/HeathItemTitleTxt"
                android:text="체중변화"/>
            <TextView
                android:id="@+id/tv_weight"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/tv_weight_title" android:layout_centerHorizontal="true"
                style="@style/HeathItemNumberTxt"  android:text="0"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_muscle"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:padding="@dimen/health_container_item_padding">
            <ImageView
                android:id="@+id/iv_muscle"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:background="@drawable/main_muscle"/>
            <TextView
                android:id="@+id/tv_muscle_title"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/iv_muscle" android:layout_centerHorizontal="true"
                style="@style/HeathItemTitleTxt"
                android:text="근육량"/>
            <TextView
                android:id="@+id/tv_muscle"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/tv_muscle_title" android:layout_centerHorizontal="true"
                style="@style/HeathItemNumberTxt"
                android:text="0%"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_ranking"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:padding="@dimen/health_container_item_padding">
            <ImageView
                android:id="@+id/iv_ranking"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:background="@drawable/main_ranking"/>
            <TextView
                android:id="@+id/tv_ranking_title"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/iv_ranking" android:layout_centerHorizontal="true"
                style="@style/HeathItemTitleTxt"
                android:text="건강랭킹"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_brain"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:padding="@dimen/health_container_item_padding">
            <ImageView
                android:id="@+id/iv_brain"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:background="@drawable/main_brain"/>
            <TextView
                android:id="@+id/tv_brain_title"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/iv_brain" android:layout_centerHorizontal="true"
                style="@style/HeathItemTitleTxt"
                android:text="두뇌발달분석"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1.0"
        android:layout_marginTop="@dimen/health_container_top_margin"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_bmi"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:padding="@dimen/health_container_item_padding">
            <ImageView
                android:id="@+id/iv_bmi"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:background="@drawable/main_fat"/>
            <TextView
                android:id="@+id/tv_bmi_title"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/iv_bmi" android:layout_centerHorizontal="true"
                style="@style/HeathItemTitleTxt"
                android:text="비만도"/>
            <TextView
                android:id="@+id/tv_bmi"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/tv_bmi_title" android:layout_centerHorizontal="true"
                style="@style/HeathItemNumberTxt"
                android:text="0"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_smoke"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:padding="@dimen/health_container_item_padding">
            <ImageView
                android:id="@+id/iv_smoke"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:background="@drawable/main_smoke"/>
            <TextView
                android:id="@+id/tv_smoke_title"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/iv_smoke" android:layout_centerHorizontal="true"
                style="@style/HeathItemTitleTxt"
                android:text="흡연지수"/>
            <TextView
                android:id="@+id/tv_smoke_status"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/tv_smoke_title" android:layout_centerHorizontal="true"
                style="@style/HeathItemNumberTxt"
                android:text="없음"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_activity"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:padding="@dimen/health_container_item_padding">
            <ImageView
                android:id="@+id/iv_activity"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:background="@drawable/main_activity"/>
            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/iv_activity" android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/health_container_text_margin"
                style="@style/HeathItemTitleTxt"
                android:text="나의활동량"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_mental"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:padding="@dimen/health_container_item_padding">
            <ImageView
                android:id="@+id/iv_magazine"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
                android:background="@drawable/main_magazine"/>
            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_below="@id/iv_magazine" android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/health_container_text_margin"
                style="@style/HeathItemTitleTxt"
                android:text="건강매거진"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0.8"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_map"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/main_bg">
            <TextView
                android:layout_width="100dp" android:layout_height="wrap_content"
                android:layout_alignParentRight="true" android:layout_centerVertical="true"
                style="@style/HeathLargeItemTitleTxt"
                android:text="안전\n지킴이"/>
            <ImageView
                android:id="@+id/iv_map"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/health_large_item_image_left_margin"
                android:background="@drawable/main_map"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_consult"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/main_bg">
            <TextView
                android:id="@+id/iv_consule"
                android:layout_width="100dp" android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/health_large_item_image_left_margin"
                android:layout_alignParentRight="true" android:layout_centerVertical="true"
                style="@style/HeathLargeItemTitleTxt"
                android:text="실시간\n모바일상담"/>
            <ImageView
                android:id="@+id/iv_consult"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/health_large_item_image_left_margin"
                android:background="@drawable/main_consult"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="0.8"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_noti"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/main_bg">
            <TextView
                android:layout_width="100dp" android:layout_height="wrap_content"
                android:layout_alignParentRight="true" android:layout_centerVertical="true"
                style="@style/HeathLargeItemTitleTxt"
                android:text="학교정보\n알리미" />
            <ImageView
                android:id="@+id/iv_noti"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/health_large_item_image_left_margin"
                android:layout_alignParentLeft="true" android:layout_centerVertical="true"
                android:background="@drawable/main_noti"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_challenge"
            android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"
            android:layout_margin="4dp"
            android:background="@drawable/main_bg">
            <TextView
                android:layout_width="100dp" android:layout_height="wrap_content"
                android:layout_alignParentRight="true" android:layout_centerVertical="true"
                style="@style/HeathLargeItemTitleTxt"
                android:text="도전!!\n건강!!"/>
            <ImageView
                android:id="@+id/iv_challenge"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentLeft="true" android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/health_large_item_image_left_margin"
                android:background="@drawable/main_challenge"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
