<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp" android:paddingLeft="20dp"
        android:paddingRight="20dp" android:paddingBottom="10dp"
        android:background="#F0F0F0"
        android:text="궁금한 점이 있으시면 무엇이든지 물어보세요. 바로 답변 드리도록 하겠습니다." />
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical" android:padding="10dp"
        android:background="#fafafa">
        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:singleLine="true"
            android:hint="제목"
            android:background="@drawable/bg_gray"/>
        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:hint="문의 내용을 입력해주세요."
            android:gravity="start"
            android:background="@drawable/bg_gray"/>
        <LinearLayout
            android:id="@+id/btn_send_qna"
            android:layout_width="match_parent" android:layout_height="40dp"
            android:layout_marginTop="10dp" android:gravity="center"
            android:background="@drawable/btn_back_gold_orange">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/btn_qnaicon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:text="보내기"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>