<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_consult_chatting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#000000"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp" android:paddingRight="10dp"
        android:background="#f5f5f5"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_appraisal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:enabled="false"
            android:background="@drawable/chat_mark"/>
        <EditText
            android:id="@+id/et_chat"
            android:layout_width="0dp" android:layout_height="40dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@drawable/bg_chat_black_empty"
            android:hint="내용을 입력해주세요."/>
        <TextView
            android:id="@+id/btn_enter"
            android:layout_width="50dp" android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:enabled="false" android:gravity="center"
            android:background="@drawable/btn_back_gold_orange"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="전송"/>
    </LinearLayout>

</LinearLayout>