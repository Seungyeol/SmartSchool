<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:minWidth="300dp"
    android:gravity="center"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/tvTitle"
        style="@style/Dialog_Title"
        android:layout_width="match_parent"
        android:background="@drawable/shape_popup_title_c8"
        android:text="연락처 등록" />
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/et_guardian_name"
            style="@style/InputBox" android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:hint="이름" />

        <EditText
            android:id="@+id/et_guardian_phone_num"
            style="@style/InputBox" android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:inputType="number"
            android:hint="전화번호" />

        <LinearLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_cancel" style="@style/Button_gold_orange"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:text="취소" />

            <TextView
                android:id="@+id/tv_ok" style="@style/Button_gold_orange"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:text="확인" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>