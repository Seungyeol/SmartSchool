<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_teacher_profile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="start"/>

    <LinearLayout
        android:id="@+id/ll_chat_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_teacher_profile"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_consult_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ll_chat_body"
        android:layout_alignBottom="@id/ll_chat_body"
        android:layout_marginLeft="5dp"/>
</RelativeLayout>