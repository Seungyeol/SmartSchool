<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="25dp" android:paddingLeft="25dp"
    android:paddingRight="25dp" android:paddingBottom="20dp"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" android:layout_marginBottom="15dp"
        android:textStyle="bold" android:textSize="25dp"
        android:textColor="@color/orange"
        android:text="평가하기"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <View
            android:id="@+id/v_star1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_selector_appraisal"/>
        <View
            android:id="@+id/v_star2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_selector_appraisal"/>
        <View
            android:id="@+id/v_star3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_selector_appraisal"/>
        <View
            android:id="@+id/v_star4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_selector_appraisal"/>
        <View
            android:id="@+id/v_star5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_selector_appraisal"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_appraisal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="- 보통이예요 -"/>
    <TextView
        android:id="@+id/btn_send_appraisal"
        android:layout_width="100dp" android:layout_height="35dp"
        android:textSize="17dp"
        android:background="@drawable/btn_back_gray_black"
        android:gravity="center"
        android:text="확인"/>
</LinearLayout>