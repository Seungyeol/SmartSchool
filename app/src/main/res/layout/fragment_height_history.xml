<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.aura.smartschool.fragment.HeightHistoryFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        style="@style/HealthTitle"
        android:text="상세이력" />

    <Spinner
        android:id="@+id/spinner_year"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:prompt="@string/spinner_year"/>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/heightChart"
        android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"
        android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content" android:layout_height="110dp"
                android:src="@drawable/ico_ranking_all_area"/>
            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="전국평균" android:textSize="16dp" />
            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1.5Kg" android:textSize="18dp" android:textColor="#f41606"
                android:id="@+id/tvNationAvg" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content" android:layout_height="110dp"
                android:id="@+id/imageView"
                android:src="@drawable/ico_ranking_area"/>
            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="지역평균" android:textSize="16dp" />
            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1.5Kg" android:textSize="18dp" android:textColor="#f41606"
                android:id="@+id/tvLocalAvg" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="wrap_content" android:layout_height="110dp"
                android:src="@drawable/img_main_nav01"/>
            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="나의성장" android:textSize="16dp" />
            <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1.5Kg" android:textSize="18dp" android:textColor="#f41606"
                android:id="@+id/tvMyHeight" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
