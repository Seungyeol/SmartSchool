<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="2dp"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:background="#FFFFFFFF">
		<LinearLayout
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:padding="5dp" android:gravity="center_horizontal"
			android:orientation="vertical" >
			<RelativeLayout
				android:id="@+id/fl_user_image"
				android:layout_width="85dp" android:layout_height="85dp"
				android:background="#FFFFFFFF" >
				<ImageView
					android:id="@+id/iv_user_image"
					android:layout_width="match_parent" android:layout_height="match_parent"
					android:scaleType="fitXY"
					android:background="@drawable/btn_enroll" />
				<ImageView
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="@drawable/ico_photo_bg" />
			</RelativeLayout>
			<Button
				android:id="@+id/btnModify"
				android:layout_width="35dp" android:layout_height="35dp"
				android:layout_marginTop="3dp"
				android:background="@drawable/btn_change"/>
		</LinearLayout>
        <LinearLayout
			android:id="@+id/ll_member_info"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
			android:layout_marginRight="5dp" android:layout_marginLeft="5dp"
			android:padding="3dp"
            android:orientation="vertical" >
            <RelativeLayout
		        android:layout_width="match_parent" android:layout_height="40dp"
		        android:orientation="horizontal" >
				<TextView
					android:id="@+id/tvPayment"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_centerVertical="true" android:layout_alignParentLeft="true"
					android:padding="5dp"
					android:background="@drawable/bg_gray_fill" android:textStyle="bold"
					android:textColor="@android:color/white" android:text="기본서비스"
					android:textSize="16sp" />
		        <TextView 
		            android:id="@+id/tvName"
		            android:layout_width="wrap_content" android:layout_height="wrap_content"
		            android:layout_centerVertical="true" android:layout_alignParentRight="true"
		            android:text="홍길동" android:textSize="18sp" android:textStyle="bold" />
		        <TextView 
		            android:id="@+id/tvRelation"
		            android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_toLeftOf="@+id/tvName" android:layout_centerVertical="true"
					android:layout_marginRight="20dp"
		            android:text="아빠" android:textSize="18sp" />
		    </RelativeLayout>
			<LinearLayout style="@style/Line" />
            <RelativeLayout
		        android:layout_width="match_parent" android:layout_height="35dp">
		        <TextView 
		            android:id="@+id/tvMdn"
		            android:layout_width="wrap_content" android:layout_height="wrap_content"
		            android:layout_centerVertical="true" android:layout_alignParentRight="true"
		            android:text="01012341234" android:textSize="18sp" />
		    </RelativeLayout>
			<LinearLayout
				android:id="@+id/school_info"
				android:layout_width="match_parent" android:layout_height="wrap_content"
				android:gravity="right"
				android:orientation="vertical">
				<TextView
					android:id="@+id/tv_school"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="asdf" android:textSize="16sp" />
				<TextView
					android:id="@+id/tv_school_contact"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_marginTop="5dp" android:visibility="gone"
					android:text="asdf" android:textSize="15sp" />
			</LinearLayout>
			<TextView
				android:id="@+id/tv_current_location"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_gravity="right"
				android:layout_marginTop="6dp"
				android:text="위치정보없음 or gps 꺼짐" android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
	<LinearLayout style="@style/Line" android:background="#696969" />

</LinearLayout>